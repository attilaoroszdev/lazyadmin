#The title displayed in the main menu

MAIN_TITLE="Lazy Admin - v3.0alpha"

# Switch right panel on or off
RIGHT_PANEL=true

# How many elements should the main menu hold
# Minumum number of menu items: 5
# Minumum number of menu items: 9
MAX_MENU_ITEMS=9

# How many elements should sub-menus hold
# Minumum number of sub-menu items: 5
# Minumum number of sub-menu items: 9
MAX_SUBMENU_ITEMS=9

# Change the size of the right panel
RIGHT_PANEL_WIDTH=27

# You can switch off line connector characters
# Useful for incompatible terminals (like those on mobiles)
# Which might render these out of place
DISPLAY_LINE_CONNECTORS=true

# This should be handled by the setup script,
# but you can change it to any editor command
# It will be launched like this:
# $DEFAULT_EDITOR $filename
# So make sure all arguments are BEFORE the filename
DEFAULT_EDITOR="not set"
