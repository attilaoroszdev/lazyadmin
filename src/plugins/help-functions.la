display_markdown_help() { 
    if hash pandoc 2>/dev/null; then
        pandoc_installed=true
    fi

    if hash lynx 2>/dev/null; then
        lynx_installed=true
    fi

    if [[ $pandoc_installed && $lynx_installed ]]; then
        pandoc "$1" | lynx -stdin
    else
        clear
        echo
        echo "Some dependencies are missing."
        echo "To display a formatted markdown,  install the following packag(es):"
        echo

        if [[ ! $pandoc_installed ]]; then
            echo "  - pandoc"
        fi

        if [[ ! $lynx_installed ]]; then
            echo "  - lynx"
        fi

        echo
        echo "Now press any key to display plain text"
        read -n 1 -s key_press

        less "$2"

    fi
}

functhelp1() { 
    display_markdown_help "$RES_DIR/usage-guide.md" "$RES_DIR/usage-guide.txt"
}


functhelp2() { 
    display_markdown_help "$RES_DIR/configuration-guide.md" "$RES_DIR/configuration-guide.txt"
}


functhelp3() { 
    functhelp_commanbuilder
}


functhelp_commanbuilder() { 
    display_markdown_help "$RES_DIR/command-builder-guide.md" "$RES_DIR/command-builder-guide.txt"
}